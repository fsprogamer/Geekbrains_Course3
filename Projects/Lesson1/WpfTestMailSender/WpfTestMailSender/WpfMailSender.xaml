<Window x:Class="WpfTestMailSender.WpfMailSender"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfTestMailSender"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" WindowStartupLocation="Manual">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Button x:Name="btnSendEmail" Grid.Row="1" Click="btnSendEmail_Click" Content="Button" HorizontalAlignment="Center" VerticalAlignment="Top" Width="75" Margin="10" Height="50">
        </Button>

        <PasswordBox x:Name="passwordBox" Grid.Row="0" HorizontalAlignment="Center"  VerticalAlignment="Bottom" Width="75" Margin="10"/>

    </Grid>
</Window>
